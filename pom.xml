            <email>steve at abrovinc.com</email>
            <organizationUrl>http://www.abrovinc.com</organizationUrl>
            <timezone>+1</timezone>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
        <developer>
            <name>Ã–rjan Karlsson</name>
